<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="2dp"
                android:color="#FF9800" /> <!-- Warna border saat fokus -->
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="2dp"
                android:color="#CCCCCC" /> <!-- Warna border default -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
