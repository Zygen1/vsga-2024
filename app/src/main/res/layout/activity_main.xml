<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_buat_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BUAT FILE" />

    <Button
        android:id="@+id/btn_ubah_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UBAH FILE" />

    <Button
        android:id="@+id/btn_baca_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BACA FILE" />

    <Button
        android:id="@+id/btn_hapus_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HAPUS FILE" />

    <TextView
        android:id="@+id/text_baca"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:gravity="top|left"
        android:padding="5dp"
        android:textColorHint="#000"
        android:hint="Hasil Baca File"
        android:inputType="textMultiLine"/>
</LinearLayout>